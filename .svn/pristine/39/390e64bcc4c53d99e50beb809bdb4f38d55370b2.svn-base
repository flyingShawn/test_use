<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grampus.hualauncherkai.UI.LoginSetting"
    android:background="@mipmap/bg"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center"
                android:text="管理员登录"
                android:textColor="#fff"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/service_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ico1"
                android:ems="10"
                android:hint="    服务器地址"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/blueText"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/admin_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ico2"
                android:ems="10"
                android:hint="    管理员账号"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#fff"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/admin_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ico3"
                android:ems="10"
                android:hint="    管理员密码"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#fff"
                android:textColorHint="#ccc" />

            <Button
                android:id="@+id/go_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/blue"
                android:text="管理登录"
                android:textColor="#fff" />

            <Button
                android:id="@+id/view_policy"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="20dp"
                android:background="@color/zise"
                android:text="查看策略"
                android:textColor="#fff" />

            <Button
                android:id="@+id/go_offline_delete"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="20dp"
                android:background="@color/zise"
                android:text="清除策略"
                android:textColor="#fff" />
            <Button
                android:id="@+id/go_open_a11y"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="20dp"
                android:background="@color/zise"
                android:text="开启辅助功能"
                android:textColor="#fff" />
            <Button
                android:id="@+id/obtain_screencast"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="20dp"
                android:background="@color/zise"
                android:text="获取截屏权限"
                android:textColor="#fff" />

            <Button
                android:id="@+id/add-empty"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:background="@color/alpha0"
                android:text="填空用的-gwb"
                android:textColor="#fff"
                android:visibility="invisible" />


        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/login_loadingBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="invisible" />
    </FrameLayout>
</RelativeLayout>
