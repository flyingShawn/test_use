<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_menu_height"
    android:orientation="horizontal"
    android:background="@color/bg_top" >
    <LinearLayout 
        android:id="@+id/top_left_btn"
        android:layout_width="@dimen/top_menu_wight"
        android:padding="5dp"
        android:clickable="true"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible"
        android:background="@drawable/top_menu_btn_style" >
        <ImageView 
            android:id="@+id/top_left_btn_image"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />
        <TextView 
            android:id="@+id/top_left_btn_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
	        android:textColor="@color/top_btn_text_color"
	        android:textSize="@dimen/top_left_text_size"
	        android:gravity="center"
	        android:singleLine="true"
	        android:visibility="gone" />
    </LinearLayout>
    
     <TextView 
	      android:id="@+id/top_title"
	      android:layout_width="0dp"
	      android:layout_height="match_parent"
	      android:layout_weight="1"
	      android:singleLine="true"
	      android:gravity="center"
	      android:text=""
	      android:textColor="@color/top_btn_text_color"
	      android:textSize="@dimen/top_title_size"/>
    <LinearLayout 
        android:id="@+id/top_right_btn"
        android:layout_width="@dimen/top_menu_wight"
        android:padding="5dp"
        android:clickable="true"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/top_menu_btn_style" >
        <ImageView 
            android:id="@+id/top_right_btn_image"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="visible" />
        <TextView 
            android:id="@+id/top_right_btn_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
	        android:textColor="@color/top_btn_text_color"
	        android:textSize="@dimen/top_right_text_size"
	        android:gravity="center"
	        android:singleLine="true"
	        android:visibility="gone" />
    </LinearLayout>

</LinearLayout>